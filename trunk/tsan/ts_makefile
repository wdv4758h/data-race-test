CXX=g++
CXXFLAGS=-g -DTS_NO_VALGRIND=1 -DTS_USE_STANDARD_STL -fno-exceptions
CXXOPT=-O2
LD=g++
LDFLAGS=
INCLUDES=-I.

all: ts_offline

ts_offline: ts_offline.o thread_sanitizer.o
	$(LD) $(LDFLAGS) -o $@ $^

HEADERS=thread_sanitizer.h

%.o: %.cc $(HEADERS)
	$(CXX) $(CXXFLAGS) $(CXXOPT) $(INCLUDES) -o $@ -c $<



clean:
	rm -v *.o
